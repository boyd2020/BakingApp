<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/cardview_compat_inset_shadow"
    app:cardBackgroundColor="@color/cardview_light_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/default_padding"
        android:background="@drawable/card_selector">

            <ImageView
                android:id="@+id/stepImage"
                android:layout_width="@dimen/default_image_size"
                android:layout_height="@dimen/default_image_size"
                android:src="@drawable/arrow"/>

            <TextView
                android:id="@+id/stepName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/info_text_margin"
                android:layout_gravity="center_vertical"
                android:text="Nutella Pie"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:textColor="@drawable/text_selector"
                android:textAppearance="?android:textAppearanceLarge"/>


    </LinearLayout>

</android.support.v7.widget.CardView>